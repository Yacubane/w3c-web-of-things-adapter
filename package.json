{
  "name": "w3c-web-of-things-adapter",
  "display_name": "W3C Web of Things adapter",
  "version": "0.0.1",
  "description": "Native web thing support",
  "author": "AGH UST",
  "main": "index.js",
  "scripts": {
    "lint": "eslint ."
  },
  "keywords": [
    "mozilla",
    "iot",
    "adapter",
    "wot"
  ],
  "homepage": "https://github.com/jakubdybczak/w3c-web-of-things-adapter",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/jakubdybczak/w3c-web-of-things-adapter.git"
  },
  "bugs": {
    "url": "https://github.com/jakubdybczak/w3c-web-of-things-adapter/issues"
  },
  "files": [
    "LICENSE",
    "README.md",
    "SHA256SUMS",
    "index.js",
    "manifest.json",
    "w3c-wot-adapter.js",
    "handlers-skeleton.js",
    "handlers-default.js",
    "handlers-http.js",
    "handlers-mqtt.js",
    "transformer.js"
  ],
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "enabled": true,
    "plugin": true,
    "exec": "{nodeLoader} {path}",
    "config": {
      "urls": [],
      "pollInterval": 5
    },
    "schema": {
      "type": "object",
      "required": [
        "urls",
        "pollInterval"
      ],
      "properties": {
        "urls": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "pollInterval": {
          "description": "The interval, in seconds, at which to poll property values.",
          "type": "number"
        }
      }
    }
  },
  "dependencies": {
    "dnssd": "^0.4.1",
    "mqtt": "^4.0.1",
    "node-fetch": "^2.6.0",
    "urijs": "^1.19.2",
    "ws": "^7.2.1"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "eslint": "^6.8.0"
  }
}
